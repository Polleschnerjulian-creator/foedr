# foedr. Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Clerk Authentication
# ===================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ===================
# Database
# ===================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/foedr
# For Vercel Postgres: Get from Vercel dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/foedr"

# ===================
# OpenAI (for Matching Engine)
# ===================
OPENAI_API_KEY=sk-xxx

# ===================
# App URLs
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000

