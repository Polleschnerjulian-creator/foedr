generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  company       Company?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Company {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name      String
  industry  String
  state     String
  size      String   @default("SMALL")
  employees Int?
  
  rdActive        Boolean @default(false)
  digitalActive   Boolean @default(false)
  greenActive     Boolean @default(false)
  exportActive    Boolean @default(false)
  
  planInvestment  Boolean @default(false)
  planHiring      Boolean @default(false)
  planInnovation  Boolean @default(false)
  planDigital     Boolean @default(false)
  planGreen       Boolean @default(false)
  
  onboardingComplete Boolean @default(false)
  
  matches      Match[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Program {
  id          String   @id @default(cuid())
  name        String
  shortName   String?
  provider    String
  description String
  type        String
  maxAmount   Int?
  minAmount   Int?
  fundingRate Int?
  deadline    DateTime?
  isRecurring Boolean  @default(false)
  
  targetSizes      String[]
  targetIndustries String[]
  targetStates     String[]
  
  requiresRD       Boolean @default(false)
  requiresDigital  Boolean @default(false)
  requiresGreen    Boolean @default(false)
  requiresExport   Boolean @default(false)
  
  url        String?
  isActive   Boolean  @default(true)
  
  matches    Match[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Match {
  id        String @id @default(cuid())
  
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
  
  program   Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId String
  
  score       Int
  eligible    Boolean
  reasons     String[]
  risks       String[]
  nextSteps   String[]
  status      String @default("NEW")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([companyId, programId])
}
