generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  name      String
  industry  String
  state     String
  size      String   @default("SMALL")
  employees Int?
  revenue   Int?
  balance   Int?
  rdActive        Boolean @default(false)
  exportActive    Boolean @default(false)
  digitalActive   Boolean @default(false)
  greenActive     Boolean @default(false)
  planInvestment  Boolean @default(false)
  planHiring      Boolean @default(false)
  planConsulting  Boolean @default(false)
  planInnovation  Boolean @default(false)
  onboardingComplete Boolean @default(false)
  matches      Match[]
  applications Application[]
  alerts       Alert[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Program {
  id          String   @id @default(cuid())
  name        String
  shortName   String?
  provider    String
  description String
  type        String
  maxAmount   Int?
  minAmount   Int?
  fundingRate Int?
  deadline    DateTime?
  isRecurring Boolean  @default(false)
  targetSizes     String[]
  targetIndustries String[]
  targetStates    String[]
  requiresRD      Boolean @default(false)
  requiresExport  Boolean @default(false)
  requiresDigital Boolean @default(false)
  requiresGreen   Boolean @default(false)
  url         String?
  isActive    Boolean  @default(true)
  matches      Match[]
  applications Application[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id        String @id @default(cuid())
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
  program   Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId String
  score       Int
  eligible    Boolean
  reasons     String[]
  risks       String[]
  nextSteps   String[]
  status      String @default("NEW")
  savedAt     DateTime?
  dismissedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([companyId, programId])
}

model Application {
  id        String @id @default(cuid())
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
  program   Program @relation(fields: [programId], references: [id])
  programId String
  status    String @default("INTERESTED")
  requestedAmount Int?
  approvedAmount  Int?
  submittedAt DateTime?
  approvedAt  DateTime?
  rejectedAt  DateTime?
  notes String?
  documents Document[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id            String @id @default(cuid())
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String
  name     String
  type     String
  url      String
  size     Int
  required Boolean @default(false)
  uploaded Boolean @default(false)
  createdAt DateTime @default(now())
}

model Alert {
  id        String @id @default(cuid())
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
  type      String
  title     String
  message   String
  programId String?
  read      Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
}
